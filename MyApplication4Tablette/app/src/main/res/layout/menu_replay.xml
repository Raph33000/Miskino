<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejouer!"
        android:id="@+id/button2"
        android:layout_marginTop="202dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textSize="45dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score : 0"
        android:id="@+id/textView4"
        android:textSize="60dp"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:id="@+id/logo"
        android:src="@drawable/swipeitpetit"
        android:layout_marginTop="40dp"

        android:layout_centerHorizontal="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/share"
        android:id="@+id/Button"

        android:layout_marginTop="65dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@drawable/header"
        android:layout="@+id/textView4"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="High score : "
        android:id="@+id/text_high"
        android:textSize="45dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/partiefin"
        android:layout_alignEnd="@+id/partiefin"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="100dp"
        android:src="@drawable/header"
        android:id="@+id/imageView5"
        android:scaleType="fitXY"

        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partie terminÃ©e!"
        android:id="@+id/partiefin"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#ffffff" />
</RelativeLayout>